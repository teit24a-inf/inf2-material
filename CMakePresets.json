{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "macos-make",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/default"
        }
    ],
    "buildPresets": [
        {
            "name": "macos-make",
            "configurePreset": "macos-make"
        }
    ],
    "testPresets": [
        {
            "name": "macos-make",
            "configurePreset": "macos-make",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "macos-make",
            "steps": [
                {
                    "type": "configure",
                    "name": "macos-make"
                },
                {
                    "type": "build",
                    "name": "macos-make"
                },
                {
                    "type": "test",
                    "name": "macos-make"
                }
            ]
        }
    ]
}
